@model JewishHairCut.Models.Barber

@{
    ViewData["Title"] = "DetailsOnBarber";
}

<h1>@Model.Name</h1>

<div>
    <h4>@Model.PhoneNumber</h4>
    <hr />
    <dl class="row">
        <h3>תורים</h3>

        @foreach (Act act in Model.Acts)
        {
            <div style="border:dotted">
            <dt class="col-sm-2">
                פעולה
            </dt>
            <dd class="col-sm-10">
                @act.Name
            </dd>
            <dt class="col-sm-2">
                תאריך התחלה
            </dt>
            <dd class="col-sm-10">
                @act.Start.ToString()
            </dd>
            <dt class="col-sm-2">
                תאריך סיום
            </dt>
            <dd class="col-sm-10">
                @act.End.ToString()
            </dd>
            <dt class="col-sm-2">
                מחיר
            </dt>
            <dd class="col-sm-10">
                @act.Price
            </dd>
            <dt class="col-sm-2">
                האם תפוס
            </dt>
            <dd class="col-sm-10">
                @(act.IsOccupied ? "תפוס" : Html.ActionLink("תפוס תור", "OccupieAct", new { ActID = act.ID  }))
            </dd>
            </div>
        }
    </dl>
</div>

